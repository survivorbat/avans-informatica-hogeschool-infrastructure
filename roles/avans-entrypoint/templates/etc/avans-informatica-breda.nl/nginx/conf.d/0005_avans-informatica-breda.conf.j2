server {
    listen 8443 ssl http2;
    server_name www.{{ inventory_hostname }};
    return 301 $scheme://{{ inventory_hostname }}$request_uri;
}

server {
    listen 8443 ssl http2;

    server_name {{ inventory_hostname }};

    root /srv/html;

    location / {
        try_files $uri $uri/ =404;
    }

    include /etc/nginx/snippets/errors.conf;
}
